<div class="modal fade new-member" id="delete-task" data-bs-backdrop="static" role="dialog" tabindex="-1"
    aria-labelledby="staticBackdropLabel">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content radius-xl">
            <div class="modal-header">
                <h6 class="modal-title fs-5 fw-500" id="staticBackdropLabel">Xác nhận xoá danh mục</h6>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="svg replaced-svg">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body p-3">
                <div class="new-member-modal">
                    <form asp-controller="Support" asp-area="Admin" asp-action="DeleteTask" method="POST"
                        id="delete-task-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" class="task-id" />
                        <p class="mt-3 fs-6 fw-500 text-center">Bạn có chắc chắn muốn xoá yêu cầu này? <br />
                            <span class="dm-tag tag-danger rounded-pill tag-transparented task-completed"></span>
                        </p>
                        <div class="button-group d-flex pt-10 justify-content-end">
                            <button type="submit" class="confirm-btn btn btn-danger btn-rounded">Xác
                                nhận
                            </button>
                            <button type="button" class="btn btn-light btn-default btn-rounded"
                                data-bs-dismiss="modal">Huỷ bỏ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteTask = document.getElementById('delete-task')
        if (deleteTask) {
            deleteTask.addEventListener('show.bs.modal', event => {
                const dataContainer = $(event.relatedTarget).closest('.ticket-data-container');
                const taskData = {
                    id: dataContainer.data("id"),
                    name: dataContainer.data("title"),
                }
                const modalData = {
                    modalName: $(deleteTask).find('.task-completed'),
                    taskId: $(deleteTask).find('.task-id')
                }
                modalData.modalName.text("#" + taskData.id)
                modalData.taskId.val(taskData.id)
            })
        }
    });
</script>
