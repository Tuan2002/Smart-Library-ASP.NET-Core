@{
    ViewData["Title"] = "Trang chủ";
}
<div class="course-ticket mt-20">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 mb-xxl-45  mb-md-50 mb-30">
                <div class="card banner-feature--12 d-flex">
                    <div class="d-flex flex-sm-nowrap flex-wrap align-items-center text-center">
                        <div class="banner-feature__shape">
                            <img src="img/svg/group3474.svg" alt="img">
                        </div>
                        <div class="card-body py-20 d-flex-column align-content-center">
                            <h1 class="banner-feature__heading">Hỗ trợ sinh viên</h1>
                            <p class="fs-13 mt-2">Tham gia cùng chúng tôi để mang lại nhiều giá trị tốt đẹp hơn cho
                                tương lai
                            </p>
                            <div class="d-flex justify-content-center">
                                <button class="banner-feature__btn btn btn btn-primary btn-md px-20 radius-xl fs-15"
                                    type="button">Tìm hiểu thêm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-xxl-45 mb-md-50 mb-30">
                <div class="card banner-feature--13 d-flex">
                    <div class="d-flex align-items-center flex-sm-nowrap flex-wrap text-sm-start text-center">
                        <div class="card-body">
                            <h2 class="banner-feature__heading">Vấn đề của bạn, hãy để chúng tôi lo!</h2>
                            <p class="banner-feature__para ">Hệ thống chuyên hỗ trợ những vẫn đề cấp thiết miễn phí cho
                                học sinh, sinh viên trường Đại học Vinh
                            </p>
                            <div class="d-flex justify-content-sm-start justify-content-center">
                                <button
                                    class="banner-feature__btn btn color-primary btn-md px-20 bg-white radius-xl fs-15"
                                    type="button">Bắt đầu ngay</button>
                            </div>
                        </div>
                        <div class="banner-feature__shape">
                            <img src="img/svg/objects.svg" alt="img">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ends: .row -->
        <div class="row">
            <div class="col-xxl-3 col-xl-4 col-sm-6 col-12 mb-25">
                <div class="card-body course-card p-0 radius-xl overflow-hidden">
                    <div class="card-header p-3 text-center d-flex justify-content-center">
                        <span class="text-center fw-500">Sát hạch bằng lái</span>
                    </div>
                    <!-- Start: product body -->
                    <div class="p-4">
                        <div class="course-card__img-area">
                            <img src="/img/sat-hach.jpeg" alt="img" class="object-fit-cover border img-fluid radius-xl">
                        </div>
                        <div class="upload-product-media d-flex justify-content-between align-items-center mt-10">
                            <div class="upload-media-area d-flex justify-content-center">
                                <p class="text-center fs-13">Hỗ trợ đào tạo, thi bằng lái xe</p>
                            </div>

                        </div>
                        <div class="button-group d-flex justify-content-center">
                            <a asp-action="CreateTicket" asp-controller="Support"
                                class="btn btn-primary btn-default rounded-pill">Đăng ký tư
                                vấn</a>
                        </div>
                    </div>
                    <!-- End: product body -->
                </div>
            </div>
            <div class="col-xxl-3 col-xl-4 col-sm-6 col-12 mb-25">
                <div class="card-body course-card p-0 radius-xl overflow-hidden">
                    <div class="card-header p-3 text-center d-flex justify-content-center">
                        <span class="text-center fw-500">Học ngoại ngữ</span>
                    </div>
                    <!-- Start: product body -->
                    <div class="p-4">
                        <div class="course-card__img-area">
                            <img src="/img/english.jpeg" alt="img" alt="img" class="border img-fluid radius-xl">
                        </div>
                        <div class="upload-product-media d-flex justify-content-between align-items-center mt-10">
                            <div class="upload-media-area d-flex justify-content-center">
                                <p class="text-center fs-13">Hỗ trợ học và thi chứng chỉ</p>
                            </div>
                        </div>
                        <div class="button-group d-flex justify-content-center">
                            <a asp-action="CreateTicket" asp-controller="Support"
                                class="btn btn-primary btn-default rounded-pill">Đăng ký tư vấn</a>
                        </div>
                    </div>
                    <!-- End: product body -->
                </div>
            </div>
            <div class="col-xxl-3 col-xl-4 col-sm-6 col-12 mb-25">
                <div class="card-body course-card p-0 radius-xl overflow-hidden">
                    <div class="card-header p-3 text-center d-flex justify-content-center">
                        <span class="text-center fw-500">Tìm kiếm việc làm</span>
                    </div>
                    <!-- Start: product body -->
                    <div class="p-4">
                        <div class="course-card__img-area">
                            <img src="/img/job.webp" alt="img" class="img-fluid border radius-xl">
                        </div>
                        <div class="upload-product-media d-flex justify-content-between align-items-center mt-10">
                            <div class="upload-media-area d-flex justify-content-center">
                                <p class="text-center fs-13">Giới thiệu, tìm kiếm việc làm phù hợp</p>
                            </div>
                        </div>
                        <div class="button-group d-flex justify-content-center">
                            <a asp-action="CreateTicket" asp-controller="Support"
                                class="btn btn-primary btn-default rounded-pill">Đăng ký tư vấn</a>
                        </div>
                    </div>
                    <!-- End: product body -->
                </div>
            </div>
            <div class="col-xxl-3 col-xl-4 col-sm-6 col-12 mb-25">
                <div class="card-body course-card p-0 radius-xl overflow-hidden">
                    <div class="card-header p-3 text-center d-flex justify-content-center">
                        <span class="text-center fw-500">Sinh viên thực tập</span>
                    </div>
                    <!-- Start: product body -->
                    <div class="p-4">
                        <div class="course-card__img-area">
                            <img src="/img/thuctap.jpeg" alt="img" class="img-fluid border radius-xl">
                        </div>
                        <div class="upload-product-media d-flex justify-content-between align-items-center mt-10">
                            <div class="upload-media-area d-flex justify-content-center">
                                <p class="text-center fs-13">Tạo cơ hội cho sinh viện thực tập</p>
                            </div>
                        </div>
                        <div class="button-group d-flex justify-content-center">
                            <a asp-action="CreateTicket" asp-controller="Support"
                                class="btn btn-primary btn-default rounded-pill">Đăng ký tư vấn</a>
                        </div>
                    </div>
                    <!-- End: product body -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-25">
                <div id="carouselExampleAutoplaying" class="carousel slide h-10" data-bs-ride="carousel">
                    <div class="carousel-inner radius-xl" style="max-height: 500px">
                        <div class="carousel-item active h-10">
                            <img src="/img/1.jpg" class="d-block w-100 object-fit-contain" alt="banner">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/2.jpg" class="d-block w-100 object-fit-contain" alt="banner"
                                class="d-block w-100 object-fit-cover" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/3.jpg" class="d-block  w-100 object-fit-cover" alt="banner">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <!-- ends: .row -->
            </div>
        </div>
    </div>
</div>
