<div class="modal fade new-member" id="delete-order" data-bs-backdrop="static" role="dialog" tabindex="-1"
    aria-labelledby="staticBackdropLabel">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content radius-xl">
            <div class="modal-header">
                <h6 class="modal-title fs-5 fw-500" id="staticBackdropLabel">Xác nhận huỷ đơn mượn sách</h6>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="svg replaced-svg">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body p-3">
                <div class="new-member-modal">
                    <form asp-controller="Orders" asp-action="CancelOrder" method="POST" id="delete-category-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" class="order-id" />
                        <p class="mt-3 fs-6 fw-500 text-center">Bạn có chắc chắc muốn thực hiện thao tác với: #
                            <span class="dm-tag tag-primary rounded-pill tag-transparented order-code">Sách kinh tế
                            </span>
                        </p>
                        <div class="button-group d-flex pt-10 justify-content-end">
                            <button type="submit" class="confirm-btn btn btn-danger btn-rounded">Xác
                                nhận
                            </button>
                            <button type="button" class="btn btn-light btn-default btn-rounded"
                                data-bs-dismiss="modal">Huỷ bỏ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteOrderModal = document.getElementById('delete-order')
        if (deleteOrderModal) {
            deleteOrderModal.addEventListener('show.bs.modal', event => {
                const dataContainer = $(event.relatedTarget).closest('.order-data-container');
                const orderData = {
                    id: dataContainer.data("id"),
                }
                const modalData = {
                    modalName: $(deleteOrderModal).find('.order-code'),
                    orderId: $(deleteOrderModal).find('.order-id')
                }
                modalData.modalName.text(orderData.id)
                modalData.orderId.val(orderData.id)
            })
        }
    });
</script>
