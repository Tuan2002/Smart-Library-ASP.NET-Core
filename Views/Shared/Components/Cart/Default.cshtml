@model IList<CartItem>

<div class="dropdown-wrapper">
    <h2 class="dropdown-wrapper__title">Giỏ sách @if (Model != null && Model.Count > 0)
        {
            <span class="badge-circle badge-primary ms-1">@Model.Count</span>
        }
    </h2>
    <ul>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <li class="author-online has-new-message">
                    <div class="user-avater">
                        <img class="object-fit-cover" src="@item.Book.ImageURL" alt="">
                    </div>
                    <div class="user-message">
                        <p>
                            <a href="" class="subject stretched-link text-truncate"
                                style="max-width: 180px;">@item.Book.Name</a>
                        </p>
                        <p>
                            <span class="desc text-truncate" style="max-width: 215px;">@item.Book.AuthorName</span>
                        </p>
                    </div>
                    <span class="msg-count badge-circle badge-primary badge-md">@item.Quantity</span>
                </li>
            }
            <a asp-controller="Orders" asp-action="Cart" class="dropdown-wrapper__more">Xem toàn bộ
                giỏ sách</a>
        }
        else
        {
            <div class="card card-default card-md mb-4">
                <div class="card-body">
                    <div class="dm-empty text-center">
                        <div class="dm-empty__image">
                            <img src="/img/svg/empty.svg" alt="Empty table">
                        </div>
                        <div class="dm-empty__text">
                            <p class="">Giỏ sách đang trống!</p>
                        </div>
                    </div>
                </div>
            </div>
        }

    </ul>
</div>